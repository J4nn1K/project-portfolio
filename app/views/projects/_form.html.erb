<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <% if project.thumbnail.attached?%>
    <%= image_tag project.thumbnail %>
  <% end %>

  <div>
    <%= form.label :thumbnail, style: "display: block" %>
    <%= form.file_field :thumbnail %>
  </div>
  
  <div>
    <%= form.label :images, multiple: true, style: "display: block" %>
    <%= form.file_field :images %>
  </div>
  
  <div>
    <%= form.label :files, multiple: true, style: "display: block" %>
    <%= form.file_field :files %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
