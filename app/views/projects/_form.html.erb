<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :year, style: "display: block" %>
    <%= form.text_field :year %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, ['engineering', 'design'] %>
  </div>


  <div>
    <%= form.label :description_short, style: "display: block" %>
    <%= form.text_area :description_short %>
  </div>

  <div>
    <%= form.label :description_long, style: "display: block" %>
    <%= form.text_area :description_long %>
  </div>

  <% if project.thumbnail.attached?%>
    <%= image_tag project.thumbnail %>
  <% end %>

  <div>
    <%= form.label :thumbnail, style: "display: block" %>
    <%= form.file_field :thumbnail %>
  </div>
  
  <div>
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, :multiple => true%>
  </div>
  
  <div>
    <%= form.label :files, style: "display: block" %>
    <%= form.file_field :files, :multiple => true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
