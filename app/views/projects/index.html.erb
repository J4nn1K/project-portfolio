<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold">Projects</h1>

<div id="projects">
  <% @projects.each do |project| %>
    <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-4xl my-8">
      <div class="md:flex">
        <div class="md:shrink-0 md:w-64">
          <% if project.thumbnail.attached?%>
            <%= image_tag project.thumbnail %>
          <% end %>
        </div>
        <div class="p-8">
          <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold"><%= project.year %></div>
            <p class="block mt-1 text-lg leading-tight font-medium text-black"><%= project.name %></p>
            <p class="mt-2 text-slate-500"><%= project.description %></p>
            <p class="hover:underline font-medium py-2">
              <%= link_to "Show this project â†’", project %>
            </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p class="underline"><%= link_to "New project", new_project_path %></p>
