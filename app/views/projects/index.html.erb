<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold">Projects</h1>

<div id="projects">
  <% @projects.each do |project| %>
    <div class="shadow rounded-md border border-slate-200 flex">
      <div class="flex none w-40">
        <% if project.thumbnail.attached?%>
          <%= image_tag project.thumbnail %>
        <% end %>
      </div>
      
      <div class="flex-auto p-3">
        <p class="text-lg font-semibold text-slate-900">
          <%= project.name %>
        </p>      
        <p class="text-sm text-slate-700">
          <%= project.description %>
        </p>
        <button class="h-10 px-6 font-semibold rounded-md border border-slate-200 text-slate-900" type="button">
          <%= link_to "Show this project", project %>
        </button>
      </div>

    </div>
  <% end %>
</div>

<p class="underline"><%= link_to "New project", new_project_path %></p>
